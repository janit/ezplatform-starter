
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">{{ parentName }}</h2>
                <hr class="primary">
            </div>
        </div>
    </div>

    <div class="row">
        {% for item in contentArray %}
            {% set content = item.content %}
            {% set location = item.location %}
            <div class="col-lg-3 text-center">
                <div class="service-box">

                    {{ ez_render_field(content, 'main_image', {
                        'parameters': {
                            'width': '100%',
                            'alias': 'lift'
                        }
                    }) }}

                    <h3><a href="{{ path(location) }}">{{ ez_content_name(content) }}</a></h3>
                    <p class="text-muted">
                        {{ ez_field_value(content,'body')|striptags|slice(0,100) }}...
                        <a href="{{ path(location) }}">Read&nbsp;more&nbsp;&gt;</a>
                    </p>
                </div>
            </div>
        {% endfor %}
    </div>
</section>
